<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_album"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/iv_cover_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/album_cover_photo"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        tools:text="@tools:sample/last_names"
        />

    <ImageView
        android:id="@+id/iv_backend_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/backend_logo"
        android:visibility="invisible"
        tools:src="@drawable/ic_google_photos_24dp"
        />

    <ProgressBar
        android:id="@+id/pb_album_downoading"
        style="@style/AppTheme.DownloadProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:visibility="invisible"
        />

</FrameLayout>